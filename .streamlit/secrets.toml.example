# Streamlit Secrets Template
# Copy this to secrets.toml and fill in your values
# DO NOT commit secrets.toml to git!

# User credentials for login
# Format: username = "password"
[passwords]
authorized_user = "change_this_password"
# Add more users as needed:
# username2 = "their_password"

# Oura API credentials
[oura]
client_id = "your_oura_client_id"
client_secret = "your_oura_client_secret"
redirect_uri = "https://your-app.streamlit.app"

# Polar AccessLink API credentials
[polar]
client_id = "your_polar_client_id"
client_secret = "your_polar_client_secret"
redirect_uri = "https://your-app-url.run.app"
